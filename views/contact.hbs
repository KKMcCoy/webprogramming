<script src="scripts/contact.js"></script>

<main>
    <h2>{{title}}</h2>
    <section id="sectionContact">
        <p>Drop me an email or fill in the contact form below. 
        <span style="font-style: italic; font-size: .8em">* are required.</span></p>
        <p>Email: <a href="mailto:{{email}}">{{email}}</a></p>
        
        <div id="formResult">{{ contactResponse }}</div>
        
        <form id ="ContactForm" name="ContactForm" method="POST">
            <div>
                <label for="firstName">* First Name:</label>
                <input type="text" id="firstName" name="firstName" required="required" />
            </div>
            <br>
            <div>
                <label for="lastName">* Last Name:</label>
                <input type="text" id="lastName" name="lastName" required="required" />
            </div>
            <br>
            <div>
                <label for="email">* Email:</label>
                <input type="email" id="email" name="email" required="required" />
            </div>
            <br>
            <div>
                <label for="message" style="vertical-align: top;">* Message:</label>
                <textarea id="message" name="message" rows = '5' required="required"></textarea>
            </div>
            <br>
            <div>
                <button type="button" id="btn-submit" name="btn-submit">Submit</button>
            </div>
            <br>
        </form>
    </section>
</main>

